// // Place your key bindings in this file to override the defaults
[
    {
        "key": "cmd+i",
        "command": "composerMode.agent"
    },
    {
        "key": "cmd+l",
        "command": "-composer.sendToAgent",
        "when": "editorHasPromptBar && editorPromptBarFocused"
    },
    {
        "key": "cmd+l",
        "command": "-aichat.newchataction"
    },
    {
        "key": "cmd+alt+;",
        "command": "composer.sendToAgent",
        "when": "editorHasPromptBar && editorPromptBarFocused"
    },
    {
        "key": "cmd+alt+;",
        "command": "aichat.newchataction"
    },
    {
        "key": "ctrl+shift+alt+cmd+w",
        "command": "workbench.action.toggleAuxiliaryBar",
        "when": "!isAuxiliaryWindowFocusedContext"
    },
    {
        "key": "shift+cmd+b",
        "command": "-composer.openBrowserTab"
    },
    {
        "key": "shift+cmd+b",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "!isAuxiliaryWindowFocusedContext"
    },
    {
        "key": "cmd+b",
        "command": "-workbench.action.toggleSidebarVisibility",
        "when": "!isAuxiliaryWindowFocusedContext"
    },
    {
        "key": "cmd+]",
        "command": "-aichat.close-sidebar",
        "when": "auxiliaryBarVisible && view.workbench.panel.aichat.view.visible && !isAuxiliaryWindowFocusedContext"
    },
    {
        "key": "cmd+]",
        "command": "-aichat.newchataction",
        "when": "!view.workbench.panel.aichat.view.visible"
    }
]